//////////////////////////////*声明变量、常量*//////////////////////////////////
int ledPin = 13;   //声明ledPin变量并赋值为13

//////////////////////////////*初始化*////////////////////////////////////////////////
void setup() {
    
    digitalWrite(ledPin,OUTPUT);    
}

/////////////////////////////*主程序*//////////////////////////////////////////////////
void loop() {
    S(); delay(100);
    O(); delay(100);
    S(); delay(5000); //每个SOS信号间隔5秒
}

//////////////////////////////////*S信号子程序*////////////////////////////////////////////////////
//S
void S(){
     digitalWrite(ledPin,HIGH); delay(150);
     digitalWrite(ledPin,LOW);  delay(100);
  }

//////////////////////////////////////*O信号子程序*///////////////////////////////////////////////

void O(){
      digitalWrite(ledPin,HIGH); delay(400);
      digitalWrite(ledPin,LOW);  delay(100);
  }
