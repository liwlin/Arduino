/////////////////////////////////初始化///////////////////////////////
void setup()
{  
    pinMode(10,OUTPUT); //设置电机A的转速控制为10号引脚
    pinMode(11,OUTPUT); //设置电机B的转速控制为11号引脚
    pinMode(12,OUTPUT);//设置电机A的转向控制为12号引脚
    pinMode(13,OUTPUT);//设置电机B的转向控制为13号引脚
}
/////////////////////////////////初始化///////////////////////////////

///////////////////////////*主函数*////////////////////////////////////
void loop()
{
    zhixing(); //调用直行子程序。
    delay(1000); //设置延时（即按照上一句是意思是直行1000毫秒）
    youzhuan(); //调用右转子程序。
    delay(500); //设置延时（即按照上一句意思是右转500毫秒）

    
}
///////////////////////////*主函数*////////////////////////////////////

///////////////////////////*直行子函数*////////////////////////////////////
void zhixing()
{
    digitalWrite(10,HIGH);
    digitalWrite(11,HIGH);
    digitalWrite(12,LOW);
    digitalWrite(13,HIGH);
}
///////////////////////////*直行子函数*////////////////////////////////////

